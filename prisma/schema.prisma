generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String? @db.VarChar(255)
  email    String  @unique @db.VarChar(255)
  password String?
  gender   String?
  category String?
}

model SuperAdmin {
  id       Int     @id @default(autoincrement())
  name     String? @db.VarChar(255)
  email    String?  @unique @db.VarChar(255)
  password String?
}

model admin{
  id       Int      @id @default(autoincrement())
  name     String?   @db.VarChar(255)
  email    String?   @unique @db.VarChar(255)
  password String?
}

model tutor{
  id       Int      @id @default(autoincrement())
  name     String?   @db.VarChar(255)
  email    String?   @unique @db.VarChar(255)
  password String?
  idNumber String
  address  String     @db.VarChar(500)
  forDisabled Boolean @default(false)
  profilePicture String
  about String        @db.VarChar(5000)
  speciality String
  experience String
  education String
  rating Int
  fbUrl String
  linkedInUrl String
  twitterUrl String
  instagramUrl String
  verified Boolean @default(false)
}